<div class="columns is-mobile">
    <div class="column is-half">
        <div id="postCard">

            <form class="form new-post-form">
                <div class="form-group">
                    <label for="post-title">Post title:</label>
                    <input class="form-input" type="text" id="post-name" name="post-name" />
                </div>
                <div class="form-group">
                    <label for="project-content">Content:</label>
                    <textarea class="form-input" id="post-content" name="post-content"></textarea>
                </div>
                <div class="form-group">
                    <button type="button" class="postBtn btn-primary">Create</button>
                </div>

                {{#each posts as |post|}}
                <h2>{{post.title}}</h2>
                <p>{{user.first_name}}</p>
                {{/each}}
        </div>


        <script src="/js/post.js"></script>