<div class="card">
    <h3 class="card-header">Sign Up</h3>
    <form id="signup-form" class="card-body">
        <label for="first-name-signup" class="form-label">first name</label>
        <input id="first-name-signup" type="text" class="form-input" />
        <label for="last-name-signup" class="form-label">last name</label>
        <input id="last-name-signup" type="text" class="form-input" />
        <label for="email-signup" class="form-label">Email</label>
        <input id="email-signup" type="text" class="form-input" />
        <label class="form-label" for="password-signup">Password</label>
        <input id="password-signup" type="password" class="form-input" />
        <button type="submit" class="btn">Signup!</button>

        <a class="login-link" href="/login">Log in instead</a>
    </form>
</div>
<script src="/js/signUp.js"></script>