{{#each posts as |post|}}
<div class="post">
    <div class="name">~{{user.name}}</div>
    <div class="postPage box postLink" data-id={{this.id}}>
        {{this.title}}
    </div>
    <div class="postContent">
        {{this.post}}
    </div>
</div>
<button class="deletePost btn-primary" id="deletePost" data-id={{this.id}}>Delete Post
</button>
{{/each}}