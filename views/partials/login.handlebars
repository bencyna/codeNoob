<div id="loginModal" class="modal">
  <div class="modal-background"></div>
  <div class="modal-content">
    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn loginBtn btn-primary middle" type="submit">login</button>
      </div>
    </form>
  </div>
  <button id="closeLoginModal" class="modal-close is-large" aria-label="close"></button>
</div>