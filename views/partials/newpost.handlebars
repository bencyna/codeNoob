<div id="postModal" class="modal">
    <div class="modal-background"></div>
    <div class="modal-content">
        <form class="form post-form">
            <div class="form-group">
                <label for="title-post">Title:</label>
                <input class="form-input" type="text" id="post-name" />
            </div>
            <div class="form-group">
                <label for="content-post">Content:</label>
                <input class="form-input" type="content" id="post-content" />
            </div>
            <div class="control">
                <label class="radio">
                    <input type="radio" class="Clueless" name="foobar">
                    Clueless
                </label>
                <label class="radio">
                    <input type="radio" class="CSS" name="foobar">
                    CSS
                </label>
                <label class="radio">
                    <input type="radio" class="JavaScript" name="foobar">
                    JavaScript
                </label>
                <label class="radio">
                    <input type="radio" class="JavaScript" name="foobar">
                    Other
                </label>
            </div>
            <div class="form-group">
                <button class="btn btn-primary postBtn" type="submit">Post</button>
            </div>
        </form>
    </div>
    <button id="closePostModal" class="modal-close is-large" aria-label="close"></button>
</div>